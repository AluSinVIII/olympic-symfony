{% extends 'base.html.twig' %}

{% block title %}Sport{% endblock %}

{% block body %}
    <h1>Sport</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ sport.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ sport.name }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ sport.description }}</td>
            </tr>
            <tr>
                <th>Location</th>
                <td>{{ sport.location }}</td>
            </tr>
            <tr>
                <th>Type</th>
                <td>{{ sport.type }}</td>
            </tr>
        </tbody>
    </table>
{% endblock %}
