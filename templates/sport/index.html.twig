{% extends 'base.html.twig' %}

{% block title %}Sport index{% endblock %}

{% block body %}
    <header>
    <h1>Sport index</h1>
    </header>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Description</th>
                <th>Location</th>
                <th>Type</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for sport in sports %}
            <tr>
                <td>{{ sport.id }}</td>
                <td>{{ sport.name }}</td>
                <td>{{ sport.description }}</td>
                <td>{{ sport.location }}</td>
                <td>{{ sport.type }}</td>
                <td>
                    <a href="{{ path('app_sport_show', {'id': sport.id}) }}">show</a>
                    <a href="{{ path('app_sport_edit', {'id': sport.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="6">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_sport_new') }}">Create new</a>
{% endblock %}
